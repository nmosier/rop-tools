# Nicholas Mosier, January 2019

CFLAGS=-c -Wall -pedantic -Werror

.PHONY: all
all: rop-lexer

rop-lexer: rop.lex.o rop-lexer-main.o
	gcc $(OFLAGS) -o $@ $^

rop.lex.c: rop.lex
	flex -o $@ $^

rop.lex.o: rop.lex.c
	gcc -c -o $@ $^		# no warnings -- generated by flex

%.o: %.c
	gcc $(CFLAGS) -o $@ $^

.PHONY: clean
clean:
	rm -f rop.lex.c *.o rop-lexer
