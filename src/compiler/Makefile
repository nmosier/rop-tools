# Nicholas Mosier, January 2019

CFLAGS=-c -Wall -pedantic -Werror

.PHONY: all
all: rop-lexer

rop-lexer: rop-flex.o rop-lexer-main.o
	gcc $(OFLAGS) -o $@ $^

rop-flex.c: rop.flex
	flex -o $@ $^

rop-flex.o: rop-flex.c
	gcc -c -o $@ $^		# no warnings -- generated by flex

%.o: %.c
	gcc $(CFLAGS) -o $@ $^

.PHONY: clean
clean:
	rm -f rop-flex.c *.o rop-lexer
